{% extends 'base.html.twig' %}

{% block title %}Export Excel{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="col-md-6">
        <h2><center>EXPORTATION EXCEL :</center></h2>
        <div class="row">
            <a href="{{path('d_export')}}" class="btn btn-success">Export Dynamic</a>
            <a href="{{path('user_list')}}" class="btn btn-warning">User</a>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                        <th scope="col">Handle</th>
                    </tr>
                </thead>
                <tbody>
                    {% for lists in list %}
                        <tr>
                            <th scope="row">{{ lists.id }}</th>
                            <td>{{ lists.firstname }}</td>
                            <td>{{ lists.lastname }}</td>
                            <td>{{ lists.handle }}</td>
                        </tr>
                    {% endfor %}   
                </tbody>
            </table>
        </div>
        <a href="{{path('contact')}}" class="btn btn-primary">Contact</a>
    </div>
</div>
{% endblock %}
